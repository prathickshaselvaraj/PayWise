<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    android:padding="24dp">

    <!-- Progress Indicator (Optional) -->
    <LinearLayout
        android:id="@+id/layoutProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_margin="4dp"
            android:background="@color/primary" />

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_margin="4dp"
            android:background="@color/primary" />

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_margin="4dp"
            android:background="@color/textSecondary" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/create_pin_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/layoutProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/create_pin_subtitle"
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PIN Input Section -->
    <TextView
        android:id="@+id/tvPinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_6digit_pin"
        android:textSize="16sp"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PIN Dots Display (Create) -->
    <LinearLayout
        android:id="@+id/layoutPinDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvPinLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/pinDot1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pinDot2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pinDot3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pinDot4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pinDot5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pinDot6"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

    </LinearLayout>

    <!-- Hidden EditText for PIN input -->
    <EditText
        android:id="@+id/etPin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Confirm PIN Section -->
    <TextView
        android:id="@+id/tvConfirmPinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_pin"
        android:textSize="16sp"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/layoutPinDots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Confirm PIN Dots Display -->
    <LinearLayout
        android:id="@+id/layoutConfirmPinDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmPinLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/confirmPinDot1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/confirmPinDot2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/confirmPinDot3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/confirmPinDot4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/confirmPinDot5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/confirmPinDot6"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty" />

    </LinearLayout>

    <!-- Hidden EditText for Confirm PIN -->
    <EditText
        android:id="@+id/etConfirmPin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/error_pin_mismatch"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutConfirmPinDots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Create PIN Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreatePin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Create PIN"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>